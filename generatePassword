    <style>
        body{
            text-align: center;
            margin-top: 4rem;
        }
        .passwordContent{
            font-size: 20px;
            border: 1px solid;
            width: 200px;
            height: 30px;
            text-align: center;
            margin: auto;
            margin-bottom: 1rem;
        }
    </style>
