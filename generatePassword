<body>
    <div class="passwordContent"></div>
    <button class="generatePass">Generate</button>

    <script>
        const generateBtn = document.querySelector(".generatePass");
        generateBtn.addEventListener("click", function(){
            passwordLengh = 4;
            let randomPass = "abcdefghijklmnopqrstuvwxyz0976543321!@#$%^&*()><:?";
            let password = "";

            for (let i = 0; i < passwordLengh; i++) {
                let randomCode = Math.floor(Math.random() * randomPass.length);
                password+=randomPass[randomCode]
            }

            document.querySelector(".passwordContent").textContent = password;
        })
    </script>
</body>
